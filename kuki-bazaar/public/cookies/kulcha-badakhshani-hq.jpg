<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" style="background: linear-gradient(135deg, #e6f3ff 0%, #cce7ff 100%);">
  <defs>
    <radialGradient id="kulchaCookie" cx="50%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#deb887;stop-opacity:1" />
      <stop offset="60%" style="stop-color:#cd853f;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#8b7355;stop-opacity:0.8" />
    </radialGradient>
    <radialGradient id="mountainBlue" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#4169e1;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#191970;stop-opacity:0.6" />
    </radialGradient>
    <radialGradient id="silverGrad" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#c0c0c0;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#808080;stop-opacity:0.7" />
    </radialGradient>
    <radialGradient id="lapislazuli" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#26619c;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#1e4d72;stop-opacity:0.8" />
    </radialGradient>
    <filter id="shadowBadakhshan" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="3" dy="6" stdDeviation="4" flood-color="#000" flood-opacity="0.3"/>
    </filter>
    <filter id="glowBadakhshan">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Mountain silhouette background -->
  <polygon points="0,200 80,120 150,140 220,100 300,130 400,110 400,300 0,300" fill="url(#mountainBlue)" opacity="0.3"/>
  <polygon points="0,220 60,150 120,160 180,130 250,150 320,140 400,130 400,300 0,300" fill="url(#lapislazuli)" opacity="0.2"/>
  
  <!-- Main cookies with traditional round kulcha shape -->
  <ellipse cx="150" cy="120" rx="58" ry="48" fill="url(#kulchaCookie)" filter="url(#shadowBadakhshan)" transform="rotate(-12 150 120)"/>
  <ellipse cx="250" cy="105" rx="55" ry="45" fill="url(#kulchaCookie)" filter="url(#shadowBadakhshan)" transform="rotate(15 250 105)"/>
  <ellipse cx="200" cy="185" rx="57" ry="47" fill="url(#kulchaCookie)" filter="url(#shadowBadakhshan)" transform="rotate(-6 200 185)"/>
  
  <!-- Traditional Badakhshani patterns on cookies -->
  <g opacity="0.8">
    <!-- Intricate geometric patterns inspired by Badakhshan crafts -->
    <circle cx="150" cy="120" r="35" fill="none" stroke="#8b7355" stroke-width="1" opacity="0.6"/>
    <circle cx="150" cy="120" r="25" fill="none" stroke="#8b7355" stroke-width="0.8" opacity="0.5"/>
    <circle cx="150" cy="120" r="15" fill="none" stroke="#8b7355" stroke-width="0.6" opacity="0.4"/>
    
    <circle cx="250" cy="105" r="32" fill="none" stroke="#8b7355" stroke-width="1" opacity="0.6"/>
    <circle cx="250" cy="105" r="22" fill="none" stroke="#8b7355" stroke-width="0.8" opacity="0.5"/>
    
    <circle cx="200" cy="185" r="34" fill="none" stroke="#8b7355" stroke-width="1" opacity="0.6"/>
    <circle cx="200" cy="185" r="24" fill="none" stroke="#8b7355" stroke-width="0.8" opacity="0.5"/>
  </g>
  
  <!-- Cookie surface textures and details -->
  <circle cx="135" cy="115" r="2.8" fill="#8b7355"/>
  <circle cx="155" cy="130" r="2.2" fill="#cd853f"/>
  <circle cx="165" cy="110" r="2.5" fill="#8b7355"/>
  <circle cx="140" cy="135" r="1.9" fill="#cd853f"/>
  
  <circle cx="235" cy="100" r="2.4" fill="#8b7355"/>
  <circle cx="260" cy="115" r="2.1" fill="#cd853f"/>
  <circle cx="245" cy="90" r="2" fill="#8b7355"/>
  <circle cx="265" cy="110" r="1.7" fill="#cd853f"/>
  
  <circle cx="185" cy="175" r="2.3" fill="#8b7355"/>
  <circle cx="210" cy="190" r="2.6" fill="#cd853f"/>
  <circle cx="215" cy="180" r="1.8" fill="#8b7355"/>
  <circle cx="190" cy="200" r="2.1" fill="#cd853f"/>
  
  <!-- Lapis lazuli pieces (Badakhshan is famous for lapis lazuli) -->
  <ellipse cx="148" cy="125" rx="4" ry="3" fill="url(#lapislazuli)" transform="rotate(30 148 125)" opacity="0.9"/>
  <ellipse cx="255" cy="110" rx="3.5" ry="2.8" fill="url(#lapislazuli)" transform="rotate(-20 255 110)" opacity="0.8"/>
  <ellipse cx="205" cy="180" rx="4.2" ry="3.2" fill="url(#lapislazuli)" transform="rotate(40 205 180)" opacity="0.9"/>
  <ellipse cx="165" cy="115" rx="3.8" ry="3" fill="url(#lapislazuli)" transform="rotate(-15 165 115)" opacity="0.8"/>
  
  <!-- Silver dust effects (representing mountain minerals) -->
  <circle cx="145" cy="120" r="1.5" fill="url(#silverGrad)" opacity="0.8"/>
  <circle cx="258" cy="108" r="1.3" fill="url(#silverGrad)" opacity="0.7"/>
  <circle cx="203" cy="182" r="1.6" fill="url(#silverGrad)" opacity="0.8"/>
  <circle cx="162" cy="118" r="1.2" fill="url(#silverGrad)" opacity="0.6"/>
  
  <!-- Traditional sesame seeds -->
  <ellipse cx="152" cy="112" rx="1.8" ry="1.2" fill="#f5deb3" transform="rotate(25 152 112)" opacity="0.9"/>
  <ellipse cx="248" cy="100" rx="1.6" ry="1" fill="#f5deb3" transform="rotate(-15 248 100)" opacity="0.8"/>
  <ellipse cx="198" cy="175" rx="1.9" ry="1.3" fill="#f5deb3" transform="rotate(35 198 175)" opacity="0.9"/>
  <ellipse cx="158" cy="128" rx="1.5" ry="1" fill="#f5deb3" transform="rotate(-25 158 128)" opacity="0.7"/>
  
  <!-- Cultural sparkles representing the pristine mountain air -->
  <g filter="url(#glowBadakhshan)">
    <path d="M80 70 L82 75 L87 73 L82 78 L80 83 L78 78 L73 73 L78 75 Z" fill="#4169e1" opacity="0.8"/>
    <path d="M320 80 L322 85 L327 83 L322 88 L320 93 L318 88 L313 83 L318 85 Z" fill="#c0c0c0" opacity="0.7"/>
    <path d="M90 220 L92 225 L97 223 L92 228 L90 233 L88 228 L83 223 L88 225 Z" fill="#26619c" opacity="0.6"/>
    <path d="M310 210 L312 215 L317 213 L312 218 L310 223 L308 218 L303 213 L308 215 Z" fill="#4169e1" opacity="0.8"/>
    <path d="M60 160 L62 165 L67 163 L62 168 L60 173 L58 168 L53 163 L58 165 Z" fill="#c0c0c0" opacity="0.9"/>
  </g>
  
  <!-- Traditional cultural decorative border elements -->
  <rect x="50" y="40" width="300" height="2" fill="url(#lapislazuli)" opacity="0.5" rx="1"/>
  <rect x="50" y="260" width="300" height="2" fill="url(#lapislazuli)" opacity="0.5" rx="1"/>
  
  <!-- Elegant text overlay with Dari/Persian script inspiration -->
  <text x="200" y="35" text-anchor="middle" font-family="serif" font-size="16" font-weight="bold" fill="#26619c" opacity="0.9">کلچه بدخشانی</text>
  <text x="200" y="55" text-anchor="middle" font-family="serif" font-size="14" fill="#26619c" opacity="0.7">Kulcha Badakhshani</text>
  <text x="200" y="285" text-anchor="middle" font-family="serif" font-size="12" fill="#26619c" opacity="0.6">Treasures from the Roof of the World</text>
</svg>