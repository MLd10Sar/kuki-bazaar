  <ellipse cx="260" cy="120" rx="1.8" ry="0.9" fill="#deb887" transform="rotate(-30 260 120)" opacity="0.6"/>
  <ellipse cx="185" cy="200" rx="2.1" ry="1.1" fill="#f5deb3" transform="rotate(35 185 200)" opacity="0.8"/>
  
  <!-- Decorative sparkles -->
  <g filter="url(#glow3)">
    <path d="M90 80 L92 85 L97 83 L92 88 L90 93 L88 88 L83 83 L88 85 Z" fill="#ffd700" opacity="0.8"/>
    <path d="M310 70 L312 75 L317 73 L312 78 L310 83 L308 78 L303 73 L308 75 Z" fill="#f5deb3" opacity="0.7"/>
