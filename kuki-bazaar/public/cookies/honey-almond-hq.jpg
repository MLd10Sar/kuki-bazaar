  <circle cx="215" cy="180" r="1.8" fill="#8b7355"/>
  <circle cx="190" cy="200" r="2.1" fill="#cd853f"/>
  
  <!-- Honey drizzle effect -->
  <path d="M140 105 Q145 110 150 125 Q155 140 160 155" stroke="url(#honeyGrad)" stroke-width="2.5" fill="none" opacity="0.8"/>
  <path d="M230 80 Q235 85 240 100 Q245 115 250 130" stroke="url(#honeyGrad)" stroke-width="2" fill="none" opacity="0.7"/>
  <path d="M180 160 Q185 165 190 180 Q195 195 200 210" stroke="url(#honeyGrad)" stroke-width="2.3" fill="none" opacity="0.8"/>
  
  <!-- Honey drops -->
  <ellipse cx="155" cy="110" rx="2" ry="3" fill="url(#honeyGrad)" opacity="0.9"/>
  <ellipse cx="245" cy="90" rx="1.8" ry="2.5" fill="url(#honeyGrad)" opacity="0.8"/>
  <ellipse cx="195" cy="170" rx="2.2" ry="3.2" fill="url(#honeyGrad)" opacity="0.9"/>
  <ellipse cx="170" cy="130" rx="1.5" ry="2" fill="url(#honeyGrad)" opacity="0.7"/>
  
  <!-- Almond slices -->
  <ellipse cx="148" cy="125" rx="4" ry="2" fill="url(#almondGrad)" transform="rotate(35 148 125)" opacity="0.9"/>
  <ellipse cx="255" cy="105" rx="3.5" ry="1.8" fill="url(#almondGrad)" transform="rotate(-20 255 105)" opacity="0.8"/>
  <ellipse cx="205" cy="180" rx="4.2" ry="2.2" fill="url(#almondGrad)" transform="rotate(45 205 180)" opacity="0.9"/>
