<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" style="background: linear-gradient(135deg, #fdf6e3 0%, #f4e4bc 100%);">
  <defs>
    <radialGradient id="cookieGradHoney" cx="50%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#daa520;stop-opacity:1" />
      <stop offset="60%" style="stop-color:#cd853f;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#8b7355;stop-opacity:0.8" />
    </radialGradient>
    <radialGradient id="honeyGrad" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#ffd700;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#ff8c00;stop-opacity:0.7" />
    </radialGradient>
    <radialGradient id="almondGrad" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#f5deb3;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#deb887;stop-opacity:0.8" />
    </radialGradient>
    <filter id="shadow3" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="3" dy="6" stdDeviation="4" flood-color="#000" flood-opacity="0.3"/>
    </filter>
    <filter id="glow3">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background texture -->
  <rect width="400" height="300" fill="url(#cookieGradHoney)" opacity="0.1"/>
  
  <!-- Main cookies -->
  <ellipse cx="160" cy="125" rx="54" ry="44" fill="url(#cookieGradHoney)" filter="url(#shadow3)" transform="rotate(-12 160 125)"/>
  <ellipse cx="240" cy="100" rx="50" ry="40" fill="url(#cookieGradHoney)" filter="url(#shadow3)" transform="rotate(18 240 100)"/>
  <ellipse cx="200" cy="185" rx="52" ry="42" fill="url(#cookieGradHoney)" filter="url(#shadow3)" transform="rotate(-6 200 185)"/>
  
  <!-- Cookie textures -->
  <circle cx="145" cy="120" r="2.8" fill="#8b7355"/>
  <circle cx="165" cy="135" r="2.2" fill="#cd853f"/>
  <circle cx="175" cy="115" r="2.5" fill="#8b7355"/>
  <circle cx="150" cy="140" r="1.9" fill="#cd853f"/>
  
  <circle cx="225" cy="95" r="2.4" fill="#8b7355"/>
  <circle cx="250" cy="110" r="2.1" fill="#cd853f"/>
  <circle cx="235" cy="85" r="2" fill="#8b7355"/>
  <circle cx="255" cy="105" r="1.7" fill="#cd853f"/>
  
  <circle cx="185" cy="175" r="2.3" fill="#8b7355"/>
