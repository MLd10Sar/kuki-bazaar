    <polygon points="650,520 652,526 658,526 654,530 656,536 650,532 644,536 646,530 642,526 648,526" opacity="0.9"/>
    <polygon points="150,500 152,506 158,506 154,510 156,516 150,512 144,516 146,510 142,506 148,506" opacity="0.7"/>
  </g>
  
  <!-- Exotic Border -->
  <g stroke="#DC143C" stroke-width="2" fill="none" opacity="0.5">
    <polygon points="80,80 90,70 100,80 90,90"/>
    <polygon points="700,80 710,70 720,80 710,90"/>
    <polygon points="80,520 90,510 100,520 90,530"/>
    <polygon points="700,520 710,510 720,520 710,530"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="500" text-anchor="middle" font-family="serif" font-size="32" font-weight="bold" fill="#F5DEB3">
    Pomegranate Surprise
  </text>
  <text x="400" y="530" text-anchor="middle" font-family="sans-serif" font-size="16" fill="#F5DEB3" opacity="0.9">
    Unique Cookies with Pomegranate Seeds & Mint from Herat Gardens
