  <circle cx="385" cy="345" r="6" fill="#D2B48C" opacity="0.7"/>
  
  <!-- Pomegranate Seeds -->
  <g fill="url(#seedGrad)">
    <circle cx="365" cy="270" r="3" opacity="0.9"/>
    <circle cx="385" cy="265" r="2.5" opacity="0.9"/>
    <circle cx="430" cy="290" r="3" opacity="0.9"/>
