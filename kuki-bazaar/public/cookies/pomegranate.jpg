  <!-- Mint Leaves -->
  <g fill="#90EE90" stroke="#228B22" stroke-width="1" opacity="0.7">
    <ellipse cx="320" cy="150" rx="8" ry="4" transform="rotate(30 320 150)"/>
    <ellipse cx="315" cy="155" rx="6" ry="3" transform="rotate(45 315 155)"/>
    <ellipse cx="480" cy="140" rx="7" ry="4" transform="rotate(-20 480 140)"/>
    <ellipse cx="485" cy="145" rx="5" ry="3" transform="rotate(-35 485 145)"/>
    <ellipse cx="520" cy="460" rx="8" ry="4" transform="rotate(60 520 460)"/>
    <ellipse cx="280" cy="450" rx="7" ry="4" transform="rotate(-45 280 450)"/>
