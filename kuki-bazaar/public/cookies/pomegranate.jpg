    <circle cx="390" cy="335" r="2" opacity="0.9"/>
    <circle cx="370" cy="345" r="3" opacity="0.9"/>
  </g>
  
  <!-- Scattered Pomegranate Seeds -->
  <g fill="url(#seedGrad)" opacity="0.8">
    <circle cx="250" cy="200" r="2"/>
    <circle cx="270" cy="180" r="2.5"/>
    <circle cx="530" cy="180" r="2"/>
    <circle cx="550" cy="200" r="3"/>
    <circle cx="580" cy="400" r="2.5"/>
    <circle cx="600" cy="420" r="2"/>
    <circle cx="220" cy="400" r="2"/>
    <circle cx="200" cy="420" r="2.5"/>
