  <!-- Ruby Crystals -->
  <g fill="#DC143C" opacity="0.6">
    <polygon points="300,120 305,110 310,120 305,130"/>
    <polygon points="500,100 505,90 510,100 505,110"/>
    <polygon points="550,500 555,490 560,500 555,510"/>
    <polygon points="250,480 255,470 260,480 255,490"/>
