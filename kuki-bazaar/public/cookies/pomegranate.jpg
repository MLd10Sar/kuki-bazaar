<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600" style="background: linear-gradient(135deg, #DC143C 0%, #B22222 50%, #8B0000 100%);">
  <defs>
    <!-- Cookie Gradient -->
    <radialGradient id="pomegranateGrad" cx="50%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#F5DEB3;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#DEB887;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#D2B48C;stop-opacity:1" />
    </radialGradient>
    
    <!-- Pomegranate Seed Gradient -->
    <radialGradient id="seedGrad" cx="30%" cy="30%" r="70%">
      <stop offset="0%" style="stop-color:#FF6347;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#DC143C;stop-opacity:1" />
    </radialGradient>
    
    <!-- Ruby Pattern -->
    <pattern id="rubyPattern" patternUnits="userSpaceOnUse" width="50" height="50">
      <circle cx="25" cy="25" r="2" fill="#DC143C" opacity="0.3"/>
      <circle cx="10" cy="10" r="1" fill="#FF6347" opacity="0.4"/>
      <circle cx="40" cy="15" r="1.5" fill="#B22222" opacity="0.3"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#rubyPattern)" opacity="0.4"/>
  
  <!-- Main Cookie -->
  <circle cx="400" cy="300" r="118" fill="url(#pomegranateGrad)" stroke="#D2B48C" stroke-width="3"/>
  
  <!-- Cookie Texture -->
  <circle cx="380" cy="275" r="7" fill="#D2B48C" opacity="0.7"/>
  <circle cx="420" cy="285" r="6" fill="#D2B48C" opacity="0.7"/>
  <circle cx="395" cy="320" r="8" fill="#D2B48C" opacity="0.7"/>
