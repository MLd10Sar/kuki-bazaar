<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" style="background: linear-gradient(135deg, #fff8e1 0%, #f5f5dc 100%);">
  <defs>
    <radialGradient id="cookieGrad1" cx="50%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#f4a261;stop-opacity:1" />
      <stop offset="60%" style="stop-color:#e76f51;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#d4a574;stop-opacity:0.8" />
    </radialGradient>
    <radialGradient id="roseGrad" cx="50%" cy="50%" r="40%">
      <stop offset="0%" style="stop-color:#ff69b4;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#dc143c;stop-opacity:0.6" />
    </radialGradient>
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feDropShadow dx="3" dy="6" stdDeviation="4" flood-color="#000" flood-opacity="0.3"/>
    </filter>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background texture -->
  <rect width="400" height="300" fill="url(#cookieGrad1)" opacity="0.1"/>
  
  <!-- Main cookies -->
  <ellipse cx="150" cy="120" rx="55" ry="45" fill="url(#cookieGrad1)" filter="url(#shadow)" transform="rotate(-15 150 120)"/>
  <ellipse cx="250" cy="100" rx="50" ry="40" fill="url(#cookieGrad1)" filter="url(#shadow)" transform="rotate(10 250 100)"/>
  <ellipse cx="200" cy="180" rx="48" ry="38" fill="url(#cookieGrad1)" filter="url(#shadow)" transform="rotate(-5 200 180)"/>
  
  <!-- Cookie textures and crumbs -->
  <circle cx="130" cy="110" r="3" fill="#d4a574"/>
  <circle cx="145" cy="125" r="2" fill="#e76f51"/>
  <circle cx="160" cy="115" r="2.5" fill="#d4a574"/>
  <circle cx="135" cy="135" r="1.5" fill="#e76f51"/>
  
  <circle cx="235" cy="95" r="2.5" fill="#d4a574"/>
  <circle cx="255" cy="110" r="2" fill="#e76f51"/>
  <circle cx="240" cy="85" r="1.8" fill="#d4a574"/>
  <circle cx="265" cy="100" r="1.5" fill="#e76f51"/>
  
  <circle cx="185" cy="170" r="2" fill="#d4a574"/>
  <circle cx="205" cy="185" r="2.5" fill="#e76f51"/>
  <circle cx="215" cy="175" r="1.8" fill="#d4a574"/>
  <circle cx="190" cy="195" r="1.5" fill="#e76f51"/>
  
  <!-- Saffron threads -->
  <path d="M120 100 Q130 95 140 105" stroke="#f4a261" stroke-width="1.5" fill="none" opacity="0.9"/>
  <path d="M155 120 Q165 115 175 125" stroke="#f4a261" stroke-width="1" fill="none" opacity="0.8"/>
  <path d="M225 85 Q235 80 245 90" stroke="#f4a261" stroke-width="1.2" fill="none" opacity="0.9"/>
  <path d="M260 105 Q270 100 280 110" stroke="#f4a261" stroke-width="1" fill="none" opacity="0.7"/>
  <path d="M175 165 Q185 160 195 170" stroke="#f4a261" stroke-width="1.3" fill="none" opacity="0.8"/>
  <path d="M210 190 Q220 185 230 195" stroke="#f4a261" stroke-width="1" fill="none" opacity="0.9"/>
  
  <!-- Rose petals -->
  <ellipse cx="140" cy="105" rx="4" ry="6" fill="url(#roseGrad)" transform="rotate(25 140 105)" opacity="0.8"/>
  <ellipse cx="250" cy="95" rx="3.5" ry="5" fill="url(#roseGrad)" transform="rotate(-15 250 95)" opacity="0.7"/>
  <ellipse cx="195" cy="175" rx="4" ry="5.5" fill="url(#roseGrad)" transform="rotate(35 195 175)" opacity="0.8"/>
  <ellipse cx="165" cy="130" rx="3" ry="4" fill="url(#roseGrad)" transform="rotate(-25 165 130)" opacity="0.6"/>
  <ellipse cx="235" cy="110" rx="3.5" ry="4.5" fill="url(#roseGrad)" transform="rotate(45 235 110)" opacity="0.7"/>
  
